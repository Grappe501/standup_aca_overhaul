---
// src/layouts/SiteLayout.astro
// Stand Up Arkansas — ACA Overhaul (Congress-grade docs shell)

const {
  title = "Stand Up Arkansas — ACA Overhaul",
  description = "A people-first, plain-language proposal for modernizing the ACA with a durable Backbone that lowers costs and stabilizes care.",
  ogTitle,
  ogDescription,
  noIndex = false,
  showAnnouncement = true,
} = Astro.props;

const pageTitle = title;
const metaDescription = description;
const ogT = ogTitle ?? pageTitle;
const ogD = ogDescription ?? metaDescription;

const nav = [
  { href: "/", label: "Home" },
  { href: "/start-here", label: "Start Here" },
  { href: "/the-problem", label: "The Problem" },
  { href: "/the-backbone", label: "The Backbone" },
  { href: "/proposal", label: "The Proposal" },
  { href: "/congress", label: "For Congress" },
  { href: "/library", label: "Library" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{pageTitle}</title>
    <meta name="description" content={metaDescription} />

    {noIndex ? <meta name="robots" content="noindex,nofollow" /> : null}

    <meta property="og:title" content={ogT} />
    <meta property="og:description" content={ogD} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="theme-color" content="#0b1220" />

    <link rel="icon" href="/favicon.svg" />

    <style>
      :root {
        --bg: 9 12 20;        /* deep navy */
        --fg: 236 240 249;    /* near-white */
        --muted: 150 160 180;
        --card: 16 22 35;
        --border: 38 48 70;
        --brand: 99 102 241;  /* indigo */
        --brand2: 34 197 94;  /* green accent */
        --shadow: 0 12px 30px rgba(0,0,0,.25);
      }

      html, body { height: 100%; }
      body {
        margin: 0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji","Segoe UI Emoji";
        background: rgb(var(--bg));
        color: rgb(var(--fg));
        line-height: 1.5;
      }

      a { color: inherit; }
      .container { max-width: 1120px; margin: 0 auto; padding: 0 20px; }

      .topbar {
        position: sticky; top: 0; z-index: 50;
        backdrop-filter: blur(10px);
        background: rgba(9,12,20,.75);
        border-bottom: 1px solid rgba(38,48,70,.7);
      }

      .brand {
        display: flex; align-items: center; gap: 10px;
        text-decoration: none;
      }
      .mark {
        width: 34px; height: 34px; border-radius: 10px;
        background: linear-gradient(135deg, rgb(var(--brand)), rgb(var(--brand2)));
        box-shadow: var(--shadow);
      }
      .brand h1 {
        font-size: 14px; margin: 0; letter-spacing: .2px;
      }
      .brand p {
        font-size: 12px; margin: 0; color: rgb(var(--muted));
      }

      nav.primary {
        display: flex; gap: 14px; flex-wrap: wrap;
        align-items: center;
      }
      nav.primary a {
        font-size: 13px;
        text-decoration: none;
        padding: 8px 10px;
        border-radius: 10px;
        color: rgba(236,240,249,.86);
      }
      nav.primary a:hover {
        background: rgba(38,48,70,.45);
        color: rgb(var(--fg));
      }

      .cta {
        display: flex; gap: 10px; align-items: center;
      }
      .btn {
        display: inline-flex; align-items: center; gap: 8px;
        padding: 9px 12px;
        border-radius: 12px;
        border: 1px solid rgba(38,48,70,.9);
        background: rgba(16,22,35,.9);
        text-decoration: none;
        font-size: 13px;
        box-shadow: 0 6px 18px rgba(0,0,0,.18);
      }
      .btn:hover { border-color: rgba(99,102,241,.7); }
      .btn.primary {
        border: 1px solid rgba(99,102,241,.85);
        background: linear-gradient(135deg, rgba(99,102,241,.25), rgba(34,197,94,.12));
      }

      .announcement {
        border-top: 1px solid rgba(38,48,70,.6);
        border-bottom: 1px solid rgba(38,48,70,.6);
        background: rgba(16,22,35,.55);
        color: rgba(236,240,249,.86);
        font-size: 13px;
      }

      main {
        padding: 28px 0 64px;
      }

      .footer {
        border-top: 1px solid rgba(38,48,70,.7);
        padding: 28px 0 44px;
        color: rgba(150,160,180,.95);
        font-size: 13px;
      }

      /* “Docs prose” defaults */
      .prose {
        max-width: 820px;
      }
      .prose h1 { font-size: 34px; line-height: 1.15; margin: 0 0 14px; }
      .prose h2 { font-size: 22px; margin: 26px 0 10px; }
      .prose h3 { font-size: 18px; margin: 20px 0 8px; color: rgba(236,240,249,.92); }
      .prose p, .prose li { color: rgba(236,240,249,.86); }
      .prose a { color: rgb(var(--brand2)); text-decoration: underline; text-underline-offset: 3px; }
      .prose code { background: rgba(38,48,70,.45); padding: 2px 6px; border-radius: 8px; }
      .prose blockquote {
        margin: 18px 0;
        padding: 12px 14px;
        border-left: 3px solid rgba(99,102,241,.85);
        background: rgba(16,22,35,.7);
        border-radius: 12px;
      }

      @media (max-width: 860px) {
        nav.primary { display: none; }
      }
    </style>
  </head>

  <body>
    <header class="topbar">
      <div class="container" style="display:flex; align-items:center; justify-content:space-between; padding: 14px 20px;">
        <a class="brand" href="/">
          <span class="mark" aria-hidden="true"></span>
          <div>
            <h1>Stand Up Arkansas</h1>
            <p>ACA Overhaul — People-first proposal</p>
          </div>
        </a>

        <nav class="primary" aria-label="Primary navigation">
          {nav.map((item) => <a href={item.href}>{item.label}</a>)}
        </nav>

        <div class="cta">
          <a class="btn" href="/start-here">Start here</a>
          <a class="btn primary" href="/congress">For Congress</a>
        </div>
      </div>

      {showAnnouncement ? (
        <div class="announcement">
          <div class="container" style="padding: 10px 20px;">
            <strong>Draft (local-first):</strong> You’re viewing a working proposal site. Every page is being refined for clarity, durability, and congressional review.
          </div>
        </div>
      ) : null}
    </header>

    <main>
      <div class="container">
        <slot />
      </div>
    </main>

    <footer class="footer">
      <div class="container" style="display:flex; flex-wrap:wrap; gap: 14px; align-items:center; justify-content:space-between;">
        <div>
          <div style="color: rgba(236,240,249,.86); font-weight: 600;">Stand Up Arkansas</div>
          <div>standuparkansas.com • “ACA for the People”</div>
        </div>
        <div style="display:flex; gap: 12px; flex-wrap:wrap;">
          <a href="/library">Library</a>
          <a href="/congress">For Congress</a>
          <a href="/proposal">Proposal</a>
        </div>
      </div>
    </footer>
  </body>
</html>
