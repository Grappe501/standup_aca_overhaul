---
import SiteLayout from "../layouts/SiteLayout.astro";
import { getCollection } from "astro:content";

const docs = (await getCollection("docs_migrated"))
  .slice()
  .sort((a, b) => (a.data.title ?? a.slug).localeCompare(b.data.title ?? b.slug));
---

<SiteLayout title="Library â€” Stand Up Arkansas">
  <div class="prose">
    <h1>Library</h1>
    <p>All documents in the proposal set.</p>

    <ul>
      {docs.map((d) => (
        <li>
          <a href={d.data.route || "/" + d.slug}>{d.data.title ?? d.slug}</a>
        </li>
      ))}
    </ul>
  </div>
</SiteLayout>
